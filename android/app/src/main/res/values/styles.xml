<resources>
    <!-- Theme applied to the Android Window while the process is starting (splash screen) -->
    <style name="LaunchTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowDisablePreview">true</item> <!-- Disables the preview screen -->
        <item name="android:windowBackground">@android:color/white</item> <!-- Set to a solid color (or transparent if you want no background) -->
        <item name="android:windowFullscreen">false</item> <!-- Ensure window is not fullscreen -->
    </style>

    <!-- Theme applied as soon as the process has started -->
    <style name="NormalTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowBackground">@android:color/white</item> <!-- This will be the background once the app loads -->
    </style>
</resources>
